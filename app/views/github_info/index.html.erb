<div id="container">
  <h1>GitHub Info</h1>

  <%= form_tag("/github_info/get_info", method: "get") do %>
    <label for="github_login">GitHub Login:</label>
    <%= text_field_tag(:github_login) %>
    <%= submit_tag("Get Info") %>
  <% end %>



  <h2>User Info:</h2>
  <% if @user_info.present? %>
    <p>Name: <%= @user_info['name'] %></p>

    <h2>Repositories:</h2>
    <% if @user_info['repos'].any? %>
      <ul>
        <% @user_info['repos'].each do |repo| %>
          <li><%= repo['name'] %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No repositories found</p>
    <% end %>
  <% else %>
    <p class="error-message">Account not found. Please check the GitHub login and try again</p>
  <% end %>
</div>
